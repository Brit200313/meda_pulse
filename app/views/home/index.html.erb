<h1>Login</h1>
<div id="login">
  <%= form_tag session_path do %>
    <%= email_field_tag :email, nil, placeholder: "Email" %>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
    <%= submit_tag "Login" %>
  <% end %>
</div>
<% if flash[:error] %>
  <div id="errors">
    <p><%= flash[:error] %></p>
  </div>
<% end %>